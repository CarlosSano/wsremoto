package decisao;

import javax.swing.JOptionPane;

public class ListaExercicio4 {

	public static void main(String[] args) {
		// Escreva um código que leia três valores inteiros e diferentes e mostre-os em ordem decrescente. 

		int valor1 = Integer.parseInt(JOptionPane.showInputDialog("Digite o 1o valor: "));
		int valor2 = Integer.parseInt(JOptionPane.showInputDialog("Digite o 1o valor: "));
		int valor3 = Integer.parseInt(JOptionPane.showInputDialog("Digite o 1o valor: "));
		int maior;
		int medio;
		int menor;
		
		if (valor1 > valor2) {
			maior = valor1
		} else if (valor3 > valor1) {
			maior = valor3
		} else if (valor2 < valor3){
			menor = valor2
			medio = valor3
		} 
			System.out.println("Ordem decrescente: " + maior + " " + menor);
			
		}
		
		
	}

}

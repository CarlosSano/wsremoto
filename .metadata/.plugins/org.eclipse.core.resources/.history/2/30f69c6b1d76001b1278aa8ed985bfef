package decisao;

import javax.swing.JOptionPane;

public class ListaExercicio4 {

	public static void main(String[] args) {
		// Escreva um código que leia três valores inteiros e diferentes e mostre-os em ordem decrescente. 

		int valor1 = Integer.parseInt(JOptionPane.showInputDialog("Digite o 1o valor: "));
		int valor2 = Integer.parseInt(JOptionPane.showInputDialog("Digite o 2o valor: "));
		int valor3 = Integer.parseInt(JOptionPane.showInputDialog("Digite o 3o valor: "));
		int maior = 0;
		int medio = 0;
		int menor = 0;

		if (valor1 > valor2 && valor3 < valor2) {
			maior = valor1;
			medio = valor2;
			menor = valor3;
		} else if (valor3 > valor1 && valor2 > valor3) {
			maior = valor2;
			medio = valor3;
			menor = valor1;
		} else if (valor2 > valor1 && valor3> valor2){
			maior = valor3;
			medio = valor2;
			menor = valor1;
		} 

		System.out.println("Ordem decrescente: " + maior + " " + medio + " " + menor);	
		//System.out.println("Ordem decrescente: " + maior);


	}


}


